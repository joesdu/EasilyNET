<Project Sdk="Microsoft.NET.Sdk">
	<Import Project="..\..\build\common.props" />

	<PropertyGroup>
		<AssemblyTitle>$(PackagePrefix).IdentityServer.MongoStorage</AssemblyTitle>
		<AssemblyName>$(PackagePrefix).IdentityServer.MongoStorage</AssemblyName>
		<PackageId>$(PackagePrefix).IdentityServer.MongoStorage</PackageId>
		<PackageTags>IdentityServer;MongoDB;Persistence</PackageTags>
		<PackageReleaseNotes>
		</PackageReleaseNotes>
		<RootNamespace>EasilyNET.IdentityServer.MongoStorage</RootNamespace>
	</PropertyGroup>
	
	<PropertyGroup>
        <PackageProjectUrl>https://www.nuget.org/packages/EasilyNET.IdentityServer.MongoStorage</PackageProjectUrl>
        <Description>IdentityServer 6.x MongoDB持久化</Description>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="MongoDB.Driver" Version="2.22.0" />
    </ItemGroup>

	<ItemGroup Condition=" '$(TargetFramework)' == 'net6.0' OR '$(TargetFramework)' == 'net7.0'">
		<PackageReference Include="Duende.IdentityServer" Version="6.3.5" />
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'net8.0'">
		<PackageReference Include="Duende.IdentityServer" Version="7.0.0-preview.1" />
	</ItemGroup>

</Project>
