<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyTitle>$(PackagePrefix).Raft.Transport.Grpc</AssemblyTitle>
    <AssemblyName>$(PackagePrefix).Raft.Transport.Grpc</AssemblyName>
    <PackageId>$(PackagePrefix).Raft.Transport.Grpc</PackageId>
    <PackageTags>Raft;gRPC;Transport</PackageTags>
    <RootNamespace>EasilyNET.Raft.Transport.Grpc</RootNamespace>
  </PropertyGroup>

  <PropertyGroup>
    <PackageProjectUrl>https://www.nuget.org/packages/EasilyNET.Raft.Transport.Grpc</PackageProjectUrl>
    <Description>Raft gRPC 传输层实现。</Description>
  </PropertyGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Google.Protobuf" />
    <PackageReference Include="Grpc.AspNetCore" />
    <PackageReference Include="Grpc.Net.Client" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\EasilyNET.Raft.Core\EasilyNET.Raft.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Protobuf Include="Protos\raft.proto" GrpcServices="Server;Client" />
  </ItemGroup>

</Project>
