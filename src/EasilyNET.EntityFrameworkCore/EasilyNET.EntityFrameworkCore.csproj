<Project Sdk="Microsoft.NET.Sdk">

    <Import Project="..\..\build\common.props"/>

    <PropertyGroup>
        <AssemblyTitle>$(PackagePrefix).EntityFrameworkCore</AssemblyTitle>
        <AssemblyName>$(PackagePrefix).EntityFrameworkCore</AssemblyName>
        <PackageId>$(PackagePrefix).EntityFrameworkCore</PackageId>
        <PackageTags>EasilyNET.EntityFrameworkCore</PackageTags>
        <PackageReleaseNotes>
        </PackageReleaseNotes>
        <RootNamespace>EasilyNET.EntityFrameworkCore</RootNamespace>
    </PropertyGroup>

    <PropertyGroup>
        <PackageProjectUrl>https://www.nuget.org/packages/EasilyNET.EntityFrameworkCore</PackageProjectUrl>
        <Description>EntityFrameworkCore</Description>
    </PropertyGroup>

    <ItemGroup Condition="'$(TargetFramework)' == 'net6.0'">
        <PackageReference Include="Microsoft.EntityFrameworkCore" Version="6.0.23"/>
        <PackageReference Include="Microsoft.EntityFrameworkCore.Relational" Version="6.0.23"/>
    </ItemGroup>

    <ItemGroup Condition="'$(TargetFramework)' == 'net7.0'">
        <PackageReference Include="Microsoft.EntityFrameworkCore" Version="7.0.12"/>
        <PackageReference Include="Microsoft.EntityFrameworkCore.Relational" Version="7.0.12"/>
    </ItemGroup>

    <ItemGroup Condition="'$(TargetFramework)' == 'net8.0'">
        <PackageReference Include="Microsoft.EntityFrameworkCore" Version="8.0.0-rc.2.23480.1"/>
        <PackageReference Include="Microsoft.EntityFrameworkCore.Relational" Version="8.0.0-rc.2.23480.1"/>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\EasilyNET.Core.Domains\EasilyNET.Core.Domains.csproj"/>
    </ItemGroup>

</Project>
